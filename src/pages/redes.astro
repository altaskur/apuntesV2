---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import SocialCard from '../components/SocialCard.astro';
---
<!DOCTYPE html>
<html lang="es">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
	</head>
	<body>
        <Header title={SITE_TITLE} />
		<main>
			<SocialCard href="https://twitter.com/altaskur" socialName="Twitter">
				<i class="bi bi-twitter"></i>
			</SocialCard>
			<SocialCard href="https://github.com/altaskur" socialName="GitHub">
				<i class="bi bi-github"></i>
			</SocialCard>
			<SocialCard href="https://instagram.com/altaskur" socialName="instagram">
				<i class="bi bi-instagram"></i>
			</SocialCard>
			<SocialCard href="https://www.threads.net/@altaskur" socialName="Threads">
				<i class="bi bi-mastodon"></i>
			</SocialCard>
			<SocialCard href="https://discord.gg/4aNWsdCfpd" socialName="Discord">
				<i class="bi bi-discord"></i>
			</SocialCard>
		</main>
    </body>
</html>

<style>
	main{
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		flex-direction: column;
		gap: 1rem;
	}
</style>